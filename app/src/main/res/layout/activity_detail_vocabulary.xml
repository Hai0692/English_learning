<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Detail_Vocabulary_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/img_avt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/imgback"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_below="@id/img_avt"
            android:padding="20dp"
            android:background="@drawable/white_bg">
        <LinearLayout
            android:id="@+id/linear_1a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/img_avt"
          android:layout_marginBottom="20dp"
            android:background="@drawable/white_bg">
            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:layout_weight="1"
                android:textColor="@color/color_desire_font"
                android:textSize="25dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/type_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="noun(n)"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic"
                />
            <ImageView
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_24"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_1b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phonetic :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:minWidth="40dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/phonetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/heˈləʊ/"
                android:textSize="20dp"
                android:layout_weight="2"
                android:textStyle="italic"
                android:textColor="@color/black"/>
        </LinearLayout>
            <LinearLayout
            android:id="@+id/linear_1c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:layout_marginBottom="20dp"
            android:background="@drawable/white_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definition :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:minWidth="200dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/definition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used when meeting or greeting someone"
                android:textSize="20dp"
                android:layout_weight="2"
                android:textStyle="italic"
                android:textColor="@color/black"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_1d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/white_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Example"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:minWidth="200dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Paul. I haven't seen you for ages."
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:textStyle="italic"
                    android:textColor="@color/black"/>
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>

</ScrollView>